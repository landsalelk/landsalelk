# LandSale.lk Environment Variables
# Copy this file to .env and fill in the values

# ================================
# APPWRITE CONFIGURATION
# ================================

# Appwrite Cloud or Self-Hosted Endpoint
NEXT_PUBLIC_APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1

# Your Appwrite Project ID (found in Project Settings)
NEXT_PUBLIC_APPWRITE_PROJECT_ID=your_project_id_here

# Database ID (create a database called 'landsalelkdb' in Appwrite Console)
NEXT_PUBLIC_APPWRITE_DATABASE_ID=landsalelkdb

# Server-side API Key (create in Project Settings > API Keys)
# Needs permissions: databases.read, databases.write, storage.read, storage.write
APPWRITE_API_KEY=your_api_key_here

# ================================
# PAYHERE PAYMENT GATEWAY (Optional)
# ================================

# Get these from https://www.payhere.lk/merchant/dashboard
NEXT_PUBLIC_PAYHERE_MERCHANT_ID=your_merchant_id
PAYHERE_MERCHANT_SECRET=your_merchant_secret

# ================================
# OPTIONAL: AI FEATURES
# ================================

# For AI chat feature powered by OpenRouter
OPENROUTER_API_KEY=your_openrouter_api_key

# Alternative: OpenAI API Key (if using OpenAI directly)
# OPENAI_API_KEY=your_openai_api_key

# ================================
# APPLICATION URLS
# ================================

# Base URL of your application
NEXT_PUBLIC_APP_URL=http://localhost:3000
